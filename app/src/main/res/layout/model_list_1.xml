<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_model_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_ripple_with_border"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/item_art"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/cover_default1"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/item_art"
        android:layout_toRightOf="@+id/item_art">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:hint="Item Title"
            android:maxLines="1"
            android:textColor="@color/viewBg"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_title"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:hint="Item Artist"
            android:maxLines="1"
            android:textColor="#80ffffff"
            android:textSize="11dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/more_options"
        android:text="3:40"
        android:textSize="12dp"
        android:textColor="@color/viewBg"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:background="@drawable/custom_ripple_with_border"
        android:id="@+id/more_options"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="0dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more_horiz_white_24dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>