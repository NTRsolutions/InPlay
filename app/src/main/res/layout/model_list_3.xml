<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_model_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ripple_with_border"
    android:orientation="vertical"
    android:layout_margin="1dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_drag_handle_white_48dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/item_art"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/cover_default1"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_art"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_art"
        android:layout_toRightOf="@+id/item_art">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="Item Title"
            android:maxLines="1"
            android:textColor="@color/viewBg"
            android:textSize="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_title"
            android:layout_below="@+id/item_title"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:hint="Item Artist"
            android:maxLines="1"
            android:textColor="@color/viewBg"
            android:textSize="11dp" />

    </RelativeLayout>


</RelativeLayout>