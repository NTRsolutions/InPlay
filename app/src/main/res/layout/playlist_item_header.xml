<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/custom_ripple_with_border">

        <RelativeLayout
            android:id="@+id/playlist_name_container_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/play_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Playlist1"
                android:textSize="18dp"
                android:textAllCaps="true"
                android:textColor="@color/viewBg" />

            <TextView
                android:id="@+id/play_list_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@id/play_list_name"
                android:textColor="#80ffffff"
                android:hint="Tracks"
                android:textSize="12dp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/play_this_list"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play_circle_outline_white_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="#60ffffff"/>
</LinearLayout>